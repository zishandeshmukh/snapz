{
  "manifest_version": 3,
  "name": "SnapMind",
  "version": "2.2",
  "description": "Scrape web content and capture screenshots.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_title": "SnapMind - Capture Memory"
  },
  "web_accessible_resources": [
    {
      "resources": ["Readability.js"],
      "matches": ["<all_urls>"]
    }
  ]
}